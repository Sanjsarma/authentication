<div class="container" style="padding: 50px 70px 100px 70px; " >
<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body" >
        
        <font size="4" face="times new roman" style="color:black; font-weight: bold; " >
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
        <%- include ("./errormsg/errors") %>
        <form action="/login" method="POST">
          <div class="form-group">
            <label for="name">User name</label>
            <input
              type="text"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter user name"
              
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
              
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block" style="background-color: #adab51;">Login</button>
        </form>
        <p class="lead mt-4">
          No Account? <a href="/register" style="font-weight: bold;">Register</a>
        </p>
        </font>
      </div>
    </div>
